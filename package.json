{
  "name": "lyric-door",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",

    "build:pages": "VITE_DEPLOY_TARGET=pages pnpm run build && node scripts/postbuild-pages.mjs",
    "preview:pages": "pnpm run build:pages && (cd dist && python3 -m http.server 4173)",

    "tauri": "bash -lc 'source $HOME/.cargo/env >/dev/null 2>&1 || true; tauri \"$@\"' --",
    "clean:rust": "bash -lc 'source $HOME/.cargo/env && cd src-tauri && cargo clean'",
    "clean:vite": "rm -rf node_modules/.vite dist",
    "clean": "pnpm run clean:vite && pnpm run clean:rust"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "@tauri-apps/cli": "^2"
  }
}
